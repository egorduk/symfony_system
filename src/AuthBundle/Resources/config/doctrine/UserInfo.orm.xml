<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AuthBundle\Entity\UserInfo" table="user_info">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="skype" type="string" column="skype" length="20" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="mobilePhone" type="string" column="mobile_phone" length="20" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="staticPhone" type="string" column="static_phone" length="20" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="username" type="string" column="username" length="20" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="surname" type="string" column="surname" length="20" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="lastname" type="string" column="lastname" length="20" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <one-to-many target-entity="AuthBundle\Entity\User" mapped-by="userInfo" field="user" />
    <many-to-one field="country" target-entity="AuthBundle\Entity\Country" inversed-by="userInfo">
      <join-column name="country_id" referenced-column-name="id" />
    </many-to-one>
  </entity>
</doctrine-mapping>
