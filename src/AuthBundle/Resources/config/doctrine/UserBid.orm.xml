<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AuthBundle\Entity\UserBid" table="user_bid">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="sum" type="integer" column="sum" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="day" type="integer" column="day" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="comment" type="string" column="comment" length="50" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="dateBid" type="datetime" column="date_bid" nullable="false"/>
    <field name="isClientDate" type="boolean" column="is_client_date" nullable="false"/>
    <field name="isShowAuthor" type="boolean" column="is_show_author" nullable="false">
      <options>
        <option name="default">b'1'</option>
      </options>
    </field>
    <field name="isShowClient" type="boolean" column="is_show_client" nullable="false">
      <options>
        <option name="default">b'1'</option>
      </options>
    </field>
    <field name="isSelectClient" type="boolean" column="is_select_client" nullable="false">
      <options>
        <option name="default">b'0'</option>
      </options>
    </field>
    <field name="isConfirmAuthor" type="boolean" column="is_confirm_author" nullable="false">
      <options>
        <option name="default">b'0'</option>
      </options>
    </field>
    <field name="isConfirmFail" type="boolean" column="is_confirm_fail" nullable="false">
      <options>
        <option name="default">b'0'</option>
      </options>
    </field>
    <field name="userId" type="integer" column="user_id" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="userOrderId" type="integer" column="user_order_id" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
  </entity>
</doctrine-mapping>
