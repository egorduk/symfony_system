<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="SecureBundle\Entity\SubjectOrder" table="subject_order">
    <unique-constraints>
      <unique-constraint name="name" columns="name"/>
      <unique-constraint name="code" columns="code"/>
    </unique-constraints>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="name" type="string" column="name" length="50" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="code" type="string" column="code" length="50" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="parentId" type="integer" column="parent_id" nullable="true">
      <options>
        <option name="unsigned">1</option>
      </options>
    </field>
    <one-to-many field="orders" target-entity="SecureBundle\Entity\UserOrder" mapped-by="subject" />
  </entity>
</doctrine-mapping>
