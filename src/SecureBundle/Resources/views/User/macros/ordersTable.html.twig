{% macro ordersTable(type) %}
    {% set statusUserOrderBid = constant('SecureBundle\\Entity\\StatusOrder::STATUS_USER_ORDER_BID') %}
    {% set statusUserOrderFinish = constant('SecureBundle\\Entity\\StatusOrder::STATUS_USER_ORDER_FINISH') %}
    {% set statusUserOrderAssignee = constant('SecureBundle\\Entity\\StatusOrder::STATUS_USER_ORDER_ASSIGNEE') %}
    {% set statusOrderWork = constant('SecureBundle\\Entity\\StatusOrder::STATUS_ORDER_WORK_CODE') %}
    {% set statusOrderGuarantee = constant('SecureBundle\\Entity\\StatusOrder::STATUS_ORDER_GUARANTEE_CODE') %}
    {% set statusOrderNew = constant('SecureBundle\\Entity\\StatusOrder::STATUS_ORDER_NEW_CODE') %}
    {% set statusOrderCompleted = constant('SecureBundle\\Entity\\StatusOrder::STATUS_ORDER_COMPLETED_CODE') %}
    {% set statusOrderAuction = constant('SecureBundle\\Entity\\StatusOrder::STATUS_ORDER_AUCTION_CODE') %}
    {% set statusOrderAssigned = constant('SecureBundle\\Entity\\StatusOrder::STATUS_ORDER_ASSIGNED_CODE') %}
    {% set statusUserOrderRefining = constant('SecureBundle\\Entity\\StatusOrder::STATUS_ORDER_REFINING_CODE') %}

    <tr>
        <th>№ заказа</th>
        <th>Предмет</th>
        <th>Тип работы</th>
        <th>Тема работы</th>
        <th>Создан</th>
        {% if type == statusUserOrderBid %}
            <th>Оценен</th>
            <th>Ставка</th>
        {% endif %}
        {% if type != statusOrderGuarantee and type != statusUserOrderFinish and type != statusUserOrderAssignee %}
            <th>Выполнение до</th>
            <th>До сдачи</th>
        {% endif %}
        {% if type != statusOrderWork and type != statusUserOrderFinish and type != statusUserOrderRefining and type != statusOrderGuarantee and type != statusUserOrderAssignee %}
            <th>Max ставка</th>
            <th>Min ставка</th>
            <th>Ставок</th>
        {% endif %}
        {% if type == statusOrderGuarantee %}
            <th>На гарантии до</th>
            <th>Срок гарантии</th>
            <th>Завершен</th>
        {% endif %}
        {% if type == statusUserOrderFinish %}
            <th>В работе с</th>
            <th>Завершен</th>
            <th>Затрачено дней</th>
        {% endif %}
        {% if type == statusUserOrderAssignee %}
            <th>Выполнение до</th>
            <th>Цена</th>
            <th>Срок</th>
            <th>Дата оценки</th>
            <th>В срок заказчика</th>
        {% endif %}
        {% if type == statusUserOrderRefining %}
            <th>Доработка до</th>
        {% endif %}
        {% if type == statusOrderNew %}
            <th>Статус</th>
        {% endif %}
        {#<th>Действия</th>#}
    </tr>
{% endmacro %}