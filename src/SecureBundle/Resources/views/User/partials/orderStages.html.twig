{% if stagesData is not empty %}
    <div>
        <p>Этапы</p>
        <table class="table table-striped table-bordered table-responsive" id="order-stage-table">
            <thead>
            <tr>
                <th>#</th>
                <th>Название</th>
                <th>Дата сдачи</th>
                <th>Статус</th>
            </tr>
            </thead>
            <tbody>
            {% for key, stage in stagesData %}
                <tr id="{{ stage.id }}">
                    <td>{{ key + 1 }}</td>
                    <td>{{ stage.name }}</td>
                    <td>{{ stage.dateStage | stageDateFormat }}</td>
                    <td>{{ stage.status | trans }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endif %}